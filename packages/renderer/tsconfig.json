{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "noImplicitAny": true,
        "rootDir": "src",
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2021"],
        "baseUrl": "./src",
        "paths": {
            "*": ["@types/*"],
            "@interface/*": ["../node_modules/card-interface/src/*"],
        },
    },
    "vueCompilerOptions": {
        "plugins": [
            "@vue/language-plugin-pug"
        ]
    },
    "include": ["src/*"]
}
