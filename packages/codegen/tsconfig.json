{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2024",
        "noImplicitAny": true,
        "rootDir": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2024", "DOM"],
        "baseUrl": "./src",
        "paths": {
            "*": ["@types/*"],
            "@/*": ["./*"],
            "@static/*": ["../node_modules/card-common/static/*"],
            "@interface/*": ["../node_modules/card-interface/src/*"],
        },
    },
    "include": ["src/**/*", "scripts/gen-model.ts"]
}
