{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "noImplicitAny": true,
        "rootDir": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2021"],
        "baseUrl": ".",
        "paths": {
            "@model/*": ["./data/*"],
            "@model-code/*": ["./src/*"],
            "@search/*": ["./node_modules/card-search/src/*"],
        },
    },
    "include": ["data/**/*", "src/**/*"]
}
