{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2019",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2019"],
        "baseUrl": "./src",
        "paths": {
            "*": ["@types/*"],
            "@/*": ["./*"],
            "@config": ["../config"],
            "@data/*": ["../data/*"]
        }
    },
    "include": ["src/*"]
}
