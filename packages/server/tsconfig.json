{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2018",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2018.AsyncIterable"],
        "baseUrl": "./src",
        "paths": {
            "*": ["@types/*"],
            "@/*": ["./*"],
            "@config": ["../config"],
            "@data/*": ["../data/*"]
        }
    },
    "include": ["./src/*", "src/middlewares/subdomain.ts", "src/magic/search/interface.ts"]
}
