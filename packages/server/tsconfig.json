{
    "ts-node": {
        "compiler": "ttypescript",
    },
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "lib": ["ES2020"],
        "baseUrl": "./src",
        "paths": {
            "*": ["@types/*"],
            "@/*": ["./*"],
            "@interface/*": ["../node_modules/card-interface/src/*"],
            "@static/*": ["../node_modules/card-static/src/*"],
            "@data/*": ["../node_modules/card-data/src/*"],
            "@searcher/*": ["../node_modules/card-searcher/src/*"],
            "@renderer/*": ["../node_modules/card-renderer/src/*"]
        },
        "plugins": [
            { "transform": "tst-reflect-transformer" },
            { "transform": "tsc-progress" }
        ]
    },
    "include": [
        "node_modules/card-static/src/**/*",
        "node_modules/card-data/src/**/*",
        "node_modules/card-searcher/src/**/*",
        "node_modules/card-renderer/src/**/*",
        "src/*"
    ]
}
