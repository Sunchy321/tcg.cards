{
    "extends": "@quasar/app-vite/tsconfig-preset",
    "compilerOptions": {
        "target": "ES2019",
        "baseUrl": ".",
        "jsx": "preserve",
        "types": ["vite/client"],
        "paths": {
            "src/*": ["src/*"],
            "app/*": ["*"],
            "components/*": ["src/components/*"],
            "layouts/*": ["src/layouts/*"],
            "pages/*": ["src/pages/*"],
            "assets/*": ["src/assets/*"],
            "boot/*": ["src/boot/*"],
            "setup/*": ["src/setup/*"],
            "store/*": ["src/stores/*"],
            "interface/*": ["node_modules/card-interface/*"],
            "searcher/*": ["node_modules/card-searcher/src/*"]
        }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
    ]
}