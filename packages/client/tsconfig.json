{
    "extends": "./.quasar/tsconfig.json",
    "compilerOptions": {
        "target": "ES2019",
        "strict": true,
        "baseUrl": ".",
        "jsx": "preserve",
        "types": ["vite/client", "@intlify/unplugin-vue-i18n/messages"],
        "paths": {
            "src/*": ["src/*"],
            "app/*": ["*"],
            "components/*": ["src/components/*"],
            "layouts/*": ["src/layouts/*"],
            "pages/*": ["src/pages/*"],
            "assets/*": ["src/assets/*"],
            "boot/*": ["src/boot/*"],
            "setup/*": ["src/setup/*"],
            "store/*": ["src/stores/*"],
            "@/*": ["src/*", "../server/src/*"],
            "@interface/*": ["node_modules/card-interface/src/*"],
            "@static/*": ["node_modules/card-common/static/*"],
            "@data/*": ["node_modules/card-common/data/*"],
            "@common/*": ["node_modules/card-common/src/*"],
            "@model/*": ["node_modules/card-model/data/*"],
            "@model-code/*": ["node_modules/card-model/src/*"],
            "@search/*": ["node_modules/card-search/src/*"],
            "@search-data/*": ["node_modules/card-search/data/*"],
            "@server/*": ["../server/src/*"],
        },
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}
