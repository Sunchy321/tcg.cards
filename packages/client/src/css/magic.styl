
@font-face
    font-family phyrexian
    src url('../../public/magic/phyrexian.woff2')

[lang=ph]
    font-family phyrexian

.magic-symbol
    height 1em
    width 1em

    &.icon-100
        width 1.88em

    &.icon-1000000
        width 5.08em

    &.icon-CHAOS
        width 1.20em

.magic-banlist-status-banned,
.magic-banlist-status-suspended,
.color-negative
    color #F33

.magic-banlist-status-banned_as_commander
    color #F26

.magic-banlist-status-restricted
    color #EA0

.magic-banlist-status-legal,
.color-positive
    color #0A0

.magic-banlist-status-unavailable
    color #777
